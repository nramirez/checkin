.navbar
    margin-bottom: 10px
    ul
        list-style-type: none
        margin:0
        padding 0
        overflow: hidden
        background-color: gray

    li
        float: left
        a
            display: block
            color: white
            text-align: center
            padding: 12px
            text-decoration: none
            font-size: 1em
            &:hover
                background-color: black
        &.active
            background-color: blue