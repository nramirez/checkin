.navbar
    margin-bottom: 10px
    ul
        list-style-type: none
        display: flex 
        background-color: hsl(0, 50%, 0)

    li
        a
            display: block
            color: white
            text-align: center
            padding: 12px
            text-decoration: none
            font-size: 1em
            &:hover
                background-color: teal
        &.active
            background-color: blue